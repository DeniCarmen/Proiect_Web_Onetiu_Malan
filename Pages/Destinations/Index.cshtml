@page
@model Proiect_Web_Onetiu_Malan.Pages.Destinations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Destinations</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Destination Name / City Name / Country Name:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
       
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                 <a asp-page="./Index" asp-route-sortOrder="@Model.TitleSort">

                    @Html.DisplayNameFor(model => model.Destination[0].Title)
                 </a> 


             </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].EntryDate)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.CitySort">
                   @Html.DisplayNameFor(model => model.Destination[0].City.CityName)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].DestinationCategories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

  @foreach (var item in Model.DestinationD.Destinations) {
            string selectedRow = "";
            if (item.ID == Model.DestinationID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City.CityName)
                </td>
                <td>
                    @{
                        foreach (var category in item.DestinationCategories)
                        {
                            @category.Category.ID @: @category.Category.CategoryName <br />
                        }
                    }
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
